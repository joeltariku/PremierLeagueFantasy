{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "cross-env NODE_ENV=development node --watch index.js",
    "test": "cross-env NODE_ENV=test jest --testTimeout=5000 --detectOpenHandles --runInBand",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "build:ui": "shx rm -rf dist && cd ../client && npm run build && shx cp -r dist ../backend",
    "deploy:full": "npm run build:ui && git add . && git commit -m uibuild && git push"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html"
    ]
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "axios": "^1.10.0",
    "axios-rate-limit": "^1.4.0",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "mongoose": "^8.19.1"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "jest": "^30.2.0",
    "shx": "^0.4.0",
    "supertest": "^7.1.4"
  }
}
